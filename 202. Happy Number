class Solution {
public:
    int sumsquare(int n)
    {
        int sum=0;
        while(n>0)
        {
            sum+=n%10;
            n/=10;
        }
        return sum;
    }
    bool isHappy(int n)
    {
        set<int> st;
        while(st.find(n)==st.end())
        {
            st.insert(n);
            n=sumsquare(n);
            if(n==1)
                return true;
        }
        return false;
    }
};

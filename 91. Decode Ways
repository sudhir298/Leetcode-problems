class Solution {
public:
    int numDecodings(string s) 
    {
        int n=s.size();
        if(n==0)
            return 0;
        
        if(s[0]=='0')
            return 0;
        
        if(n==1)
            return 1;
        
        int a=1;
        int b=1;
        for(int i=1;i<n;i++)
        {
            int x=s[i]-'0';
            int y=(s[i-1]-'0')*10 + x;
            int z=0;
            if(x>=1)
                z+=b;
            
            if(y>=10 && y<=26)
                z+=a;
            
            a=b;
            b=z;
        }
        return b;
    }
};

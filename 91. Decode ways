class Solution {
public:
    int numDecodings(string s) 
    {
        if(s[0]=='0')
            return 0;
        vector<int> t(s.size());        
        t[0]=1;
        for(int i=1;i<t.size();i++)
        {
            if(s[i-1]=='0' && s[i]=='0')
                t[i]=0;
            
            else if(s[i-1]=='0' && s[i]!='0')
                t[i]=t[i-1];
            
            else if(s[i-1]!='0' && s[i]=='0')
            {
               if(s[i-1]=='1' || s[i-1]=='2')
                   t[i]=i>=2 ?t[i-2] : 1;
                else
                    t[i]=0;
            }
            else
            {
                t[i]=t[i-1];
                if(stoi(s.substr(i-1,2))<=26)
                    t[i]+=i>=2 ? t[i-2] : 1;
            }
        }
        return t[s.size()-1];
        
    }
};
